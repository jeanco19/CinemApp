<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_user_header"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_primary"
        style="@style/CustomBottomCardViewStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_16dp"
            android:background="@color/color_primary">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_avatar"
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="@dimen/dimen_70dp"
                app:cardCornerRadius="@dimen/dimen_5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/placeholder_person"
                    android:scaleType="fitXY"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_0dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:text="@string/hint_name"
                android:fontFamily="@font/baloo_thambi2_regular"
                android:textSize="@dimen/dimen_20sp"
                android:textColor="@color/color_on_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="@+id/cv_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cv_avatar"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:text="@string/hint_email"
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/color_on_primary"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintStart_toStartOf="@id/tv_name"
                app:layout_constraintEnd_toEndOf="@id/tv_name"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/cv_user_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_general_box"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@color/color_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_general_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_0dp"
                    android:text="@string/title_general"
                    android:textSize="@dimen/dimen_18sp"
                    android:textColor="@color/color_on_background"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_general_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_8dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_theme_box"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:paddingTop="@dimen/dimen_8dp"
                android:paddingStart="@dimen/dimen_8dp"
                android:paddingEnd="@dimen/dimen_8dp"
                android:background="@color/color_background"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/ll_general_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_theme_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_theme"
                    android:textSize="@dimen/dimen_18sp"
                    android:textColor="@color/color_on_background"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp">

                    <ImageView
                        android:id="@+id/iv_dark_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_color_lens_gray_24dp"
                        app:layout_constraintTop_toTopOf="@+id/sw_dark_mode"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/sw_dark_mode"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:layout_marginEnd="@dimen/dimen_0dp"
                        android:gravity="center_vertical"
                        android:text="@string/dark_mode"
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/color_on_background"
                        app:layout_constraintTop_toTopOf="@+id/sw_dark_mode"
                        app:layout_constraintStart_toEndOf="@+id/iv_dark_mode"
                        app:layout_constraintBottom_toBottomOf="@+id/sw_dark_mode"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_dark_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_0dp"
                        android:layout_marginEnd="@dimen/dimen_16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:background="?android:attr/listDivider"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sign_out_box"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:padding="@dimen/dimen_8dp"
                android:background="@color/color_background"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/ll_theme_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_exit_to_app_gray_24dp"/>

                <TextView
                    android:id="@+id/tv_sign_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginEnd="@dimen/dimen_0dp"
                    android:gravity="center_vertical"
                    android:text="@string/sign_out"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/color_on_background"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>