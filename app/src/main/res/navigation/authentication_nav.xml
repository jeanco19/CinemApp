<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authentication_nav"
    app:startDestination="@id/front_fragment">

    <fragment
        android:id="@+id/front_fragment"
        android:name="com.jean.cinemapp.presentation.auth.ui.FrontFragment"
        android:label="fragment_front"
        tools:layout="@layout/fragment_front" >
        <action
            android:id="@+id/action_frontFragment_to_signInFragment"
            app:destination="@id/sign_in_fragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_front_fragment_to_sign_up_fragment"
            app:destination="@id/sign_up_fragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_front_fragment_to_navigation"
            app:destination="@id/navigation" />
    </fragment>

    <fragment
        android:id="@+id/sign_in_fragment"
        android:name="com.jean.cinemapp.presentation.auth.ui.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_sign_in_fragment_to_front_fragment"
            app:destination="@id/front_fragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_left"
            app:popUpTo="@id/front_fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_sign_in_fragment_to_recover_password_fragment"
            app:destination="@id/recover_password_fragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_sign_in_fragment_to_mobile_navigation"
            app:destination="@id/navigation"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>

    <fragment
        android:id="@+id/sign_up_fragment"
        android:name="com.jean.cinemapp.presentation.auth.ui.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_sign_up_fragment_to_front_fragment"
            app:destination="@id/front_fragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_left"
            app:popUpTo="@id/front_fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_sign_up_fragment_to_navigation"
            app:destination="@id/navigation"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>

    <fragment
        android:id="@+id/recover_password_fragment"
        android:name="com.jean.cinemapp.presentation.auth.ui.RecoverPasswordFragment"
        android:label="fragment_recover_password"
        tools:layout="@layout/fragment_recover_password" >
        <action
            android:id="@+id/action_recover_password_fragment_to_sign_in_fragment"
            app:destination="@id/sign_in_fragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_left"
            app:popUpTo="@id/sign_in_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <navigation android:id="@+id/navigation"
        app:startDestination="@id/mobile_navigation">
        <include app:graph="@navigation/main_nav" />
        <action
            android:id="@+id/action_main_to_front_fragment"
            app:destination="@id/front_fragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_left"
            app:popUpTo="@id/front_fragment"
            app:popUpToInclusive="true" />
    </navigation>

</navigation>